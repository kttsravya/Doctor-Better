<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd" id="WebApp_ID" version="3.1">
  <display-name>DoctorsProject</display-name>
  
  <servlet>
		<servlet-name>TypesOfDoctorsServlet</servlet-name>
		<servlet-class>Servlets.TypesOfDoctorsServlet</servlet-class>
	</servlet>
	 <servlet>
		<servlet-name>CardioDoctorListServlet</servlet-name>
		<servlet-class>Servlets.CardioDoctorListServlet</servlet-class>
	</servlet>
	 <servlet>
		<servlet-name>DentistDoctorListServlet</servlet-name>
		<servlet-class>Servlets.DentistDoctorListServlet</servlet-class>
	</servlet>
	 <servlet>
		<servlet-name>DermatologistDoctorListServlet</servlet-name>
		<servlet-class>Servlets.DermatologistDoctorListServlet</servlet-class>
	</servlet>
	 <servlet>
		<servlet-name>ENTSpecialistDoctorListServlet</servlet-name>
		<servlet-class>Servlets.ENTSpecialistDoctorListServlet</servlet-class>
	</servlet>
	 <servlet>
		<servlet-name>AppointmentServlet</servlet-name>
		<servlet-class>Servlets.AppointmentServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>SubmittedFormServlet</servlet-name>
		<servlet-class>Servlets.SubmittedFormServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>FormServlet</servlet-name>
		<servlet-class>Servlets.FormServlet</servlet-class>
	</servlet>
	
	<servlet-mapping>
		<servlet-name>TypesOfDoctorsServlet</servlet-name>
		<url-pattern>/doctors.html</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>CardioDoctorListServlet</servlet-name>
		<url-pattern>/cardiodoctorlist.html</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>DentistDoctorListServlet</servlet-name>
		<url-pattern>/dentistdoctorlist.html</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>ENTSpecialistDoctorListServlet</servlet-name>
		<url-pattern>/entdoctorlist.html</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>DermatologistDoctorListServlet</servlet-name>
		<url-pattern>/dermatologistdoctorlist.html</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>AppointmentServlet</servlet-name>
		<url-pattern>/appointment.html</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>SubmittedFormServlet</servlet-name>
		<url-pattern>/submittedformservlet.html</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>FormServlet</servlet-name>
		<url-pattern>/formservlet.html</url-pattern>
	</servlet-mapping>
	
	
	<resource-ref>
      <description>DB Connection</description>
      <res-ref-name>"jdbc/doctorsproject_database"</res-ref-name>
      <res-type>javax.sql.DataSource</res-type>
      <res-auth>Container</res-auth>
  </resource-ref>
</web-app>